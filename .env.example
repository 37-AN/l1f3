# LIF3 Financial Dashboard Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# APPLICATION CONFIGURATION
# ================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# ================================
# JWT AUTHENTICATION
# ================================
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_secure
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true
LOG_FINANCIAL_AUDIT=true
LOG_SECURITY_AUDIT=true
LOG_PERFORMANCE_METRICS=true

# ================================
# FINANCIAL TARGETS (ZAR)
# ================================
NET_WORTH_TARGET=1800000
DAILY_REVENUE_TARGET=4881
MRR_TARGET=147917
CURRENT_NET_WORTH=239625

# ================================
# BUSINESS METRICS (43V3R)
# ================================
BUSINESS_NAME=43V3R
BUSINESS_INDUSTRY=AI_WEB3_CRYPTO
BUSINESS_LOCATION=CAPE_TOWN_SA

# ================================
# DEVELOPMENT CONFIGURATION
# ================================
ENABLE_SWAGGER=true
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000
ENABLE_REQUEST_LOGGING=true

# ================================
# FEATURE FLAGS
# ================================
ENABLE_GOOGLE_DRIVE_SYNC=false
ENABLE_DISCORD_BOT=false
ENABLE_CLAUDE_AI=false
ENABLE_REAL_TIME_UPDATES=true
ENABLE_FINANCIAL_INSIGHTS=true
ENABLE_BUSINESS_METRICS=true

# ================================
# GOOGLE DRIVE INTEGRATION
# ================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here
GOOGLE_DRIVE_FOLDER_ID=1dD8C1e1hkcCPdtlqA3nsxJYWVvilV5Io

# ================================
# DISCORD BOT INTEGRATION
# ================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here

# ================================
# CLAUDE AI INTEGRATION
# ================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ================================
# MACBOOK M1 OPTIMIZATION
# ================================
DOCKER_PLATFORM=linux/arm64
NODE_OPTIONS=--max-old-space-size=4096
UV_THREADPOOL_SIZE=128