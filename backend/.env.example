# LIF3 Unified AI Automation Strategy - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=lif3_user
DATABASE_PASSWORD=your_database_password
DATABASE_NAME=lif3_db

# Development fallback (SQLite)
DATABASE_URL=sqlite:./lif3.db

# =============================================================================
# REDIS CONFIGURATION (for caching and session management)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
JWT_EXPIRATION=24h

# =============================================================================
# SENTRY INTEGRATION (Error Tracking & Monitoring)
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_organization_slug
SENTRY_PROJECT=lif3-backend

# =============================================================================
# NOTION INTEGRATION (Documentation & Knowledge Management)
# =============================================================================
NOTION_API_TOKEN=secret_your_notion_integration_token
NOTION_LIF3_DATABASE_ID=your_lif3_database_id
NOTION_NET_WORTH_GOAL_ID=your_net_worth_goal_page_id

# =============================================================================
# ASANA INTEGRATION (Project Management & Task Orchestration)
# =============================================================================
ASANA_ACCESS_TOKEN=your_asana_personal_access_token
ASANA_LIF3_PROJECT_ID=your_lif3_project_gid
ASANA_ERROR_PROJECT_ID=your_error_handling_project_gid
ASANA_WORKSPACE_ID=your_asana_workspace_gid

# =============================================================================
# CLAUDE AI INTEGRATION (Enhanced with MCP)
# =============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=4000

# =============================================================================
# GOOGLE DRIVE INTEGRATION (Document Storage)
# =============================================================================
GOOGLE_DRIVE_CLIENT_ID=your_google_drive_client_id
GOOGLE_DRIVE_CLIENT_SECRET=your_google_drive_client_secret
GOOGLE_DRIVE_REFRESH_TOKEN=your_google_drive_refresh_token
GOOGLE_DRIVE_FOLDER_ID=your_lif3_folder_id

# =============================================================================
# DISCORD INTEGRATION (Team Communication)
# =============================================================================
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNEL_ID=your_discord_channel_id

# =============================================================================
# FINANCIAL DATA APIS (South African Banking & Market Data)
# =============================================================================
# Nedbank API Marketplace
NEDBANK_API_KEY=your_nedbank_api_key
NEDBANK_CLIENT_ID=your_nedbank_client_id
NEDBANK_CLIENT_SECRET=your_nedbank_client_secret

# Okra Open Finance (Pan-African Banking)
OKRA_SECRET_KEY=your_okra_secret_key
OKRA_PUBLIC_KEY=your_okra_public_key

# Alpha Vantage (Market Data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Finnhub (Financial Data)
FINNHUB_API_KEY=your_finnhub_api_key

# =============================================================================
# MCP FRAMEWORK CONFIGURATION
# =============================================================================
MCP_LOG_LEVEL=info
MCP_HEALTH_CHECK_INTERVAL=30000
MCP_SYNC_TIMEOUT=60000
MCP_MAX_RETRIES=3
MCP_CIRCUIT_BREAKER_THRESHOLD=5
MCP_BATCH_SIZE=100
MCP_CACHE_TIMEOUT=300000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_PREFIX=api
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Financial Targets
NET_WORTH_TARGET=1800000
BUSINESS_DAILY_REVENUE_TARGET=4881
BUSINESS_MRR_TARGET=147917

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Winston Logging
LOG_FILE_PATH=./logs/lif3.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# =============================================================================
# SECURITY
# =============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# Helmet Security Headers
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HSTS_MAX_AGE=31536000

# =============================================================================
# AI AUTOMATION RULES ENGINE
# =============================================================================
AI_BRIEFING_SCHEDULE=0 8 * * *  # Daily at 8 AM
AI_GOAL_CHECK_INTERVAL=6h
AI_REVENUE_TRACKING_INTERVAL=1h
AI_EXPENSE_ANALYSIS_INTERVAL=24h

# =============================================================================
# WEBHOOKS & REAL-TIME UPDATES
# =============================================================================
WEBHOOK_SECRET=your_webhook_secret_key
WEBSOCKET_PORT=3001
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=lif3-backups
BACKUP_S3_REGION=us-east-1

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Test Database
TEST_DATABASE_URL=sqlite:./test.db

# Email Testing (for development)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USER=test
MAIL_PASSWORD=test

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Set these in production deployment
# DATABASE_URL=postgresql://user:password@host:port/database
# REDIS_URL=redis://user:password@host:port
# NODE_ENV=production
# PORT=8080